<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="股票数据抓取与AI推荐"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- API密钥设置 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GLM-4.7 API密钥"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入智谱AI的API密钥"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- 测试API按钮 -->
    <Button
        android:id="@+id/btn_test_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试API连接"
        android:layout_marginBottom="24dp"/>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="24dp"/>

    <!-- 股票代码输入 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="股票代码"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_stock_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入股票代码（如：600000）"
        android:inputType="text"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_add_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加关注"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_remove_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="移除关注"/>
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="24dp"/>

    <!-- 服务控制 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务控制"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动服务"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止服务"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="24dp"/>

    <!-- 状态显示 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 服务未启动"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <!-- 数据统计 -->
    <TextView
        android:id="@+id/tv_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据统计"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_stats_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待数据..."
            android:textSize="12sp"/>
    </ScrollView>

</LinearLayout>
